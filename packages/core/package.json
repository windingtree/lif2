{
  "name": "@windingtree/lif2-token-core",
  "version": "1.0.0",
  "description": "LIF2 token core TS library",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "build": "rm -rf dist && npx tsc -p tsconfig-build.json",
    "build:docs": "rm -rf docs && npx typedoc --plugin typedoc-plugin-markdown --readme none --out docs src/index.ts",
    "test": "npx hardhat test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/windingtree/lif2-token.git"
  },
  "keywords": [
    "windingtree",
    "lif",
    "lif2",
    "erc20",
    "typescript"
  ],
  "author": "Winding Tree Developers <dev@windingtree.com>",
  "contributors": [
    "Kostiantyn Smyrnov <kostysh@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/windingtree/lif2-token/issues"
  },
  "homepage": "https://github.com/windingtree/lif2-token/tree/master/packages/core#readme",
  "dependencies": {
    "@windingtree/lif2-token": "1.0.0"
  },
  "devDependencies": {
    "ts-node": "10.2.1",
    "ethers": "5.4.5",
    "eslint": "7.32.0",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "typedoc": "0.21.6",
    "typedoc-plugin-markdown": "3.10.4",
    "typescript": "4.3.5",
    "@types/node": "16.7.1",
    "@types/mocha": "9.0.0",
    "@types/chai": "4.2.21",
    "chai": "4.3.4",
    "hardhat": "2.6.1",
    "ethereum-waffle": "3.4.0",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/hardhat-upgrades": "1.9.0"
  }
}
